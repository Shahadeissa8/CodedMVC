@model IEnumerable<Employee>
@{
	ViewData["Title"] = "All Employees";
}
<h1>All Employees' data</h1>
<a asp-action="create" asp-controller="Employees" class=" btn btn-danger">Add</a>

@if (Model.Any())
{
	<table class="table table-bordered">
		<tr>
			<th>@Html.DisplayNameFor(x => x.EmployeeId)</th>
			<th>@Html.DisplayNameFor(x => x.Nam)</th>
			<th>@Html.DisplayNameFor(x => x.Email)</th>
			<th>@Html.DisplayNameFor(x => x.Phone)</th>
			<th>@Html.DisplayNameFor(x => x.IsActive)</th>
			<th>@Html.DisplayNameFor(x => x.IsDeleted)</th>
			<th>@Html.DisplayNameFor(x => x.HDate)</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.EmployeeId</td>
				<td>@item.Nam</td>
				<td>@item.Email</td>
				<td>@item.Phone</td>
				<td>@item.IsActive</td>
				<td>@item.IsDeleted</td>
				<td>@item.HDate</td>
				<td>
					<a asp-action="Delete"
					   asp-controller="Employees"
					   asp-route-id="@item.EmployeeId"
					   class="btn btn-danger">Delete</a>

					<a asp-action="Edit"
					   asp-controller="Employees"
					   asp-route-id="@item.EmployeeId"
					   class="btn btn-danger">Edit</a>

					<a asp-action="Details"
					   asp-controller="Employees"
					   asp-route-id="@item.EmployeeId"
					   class="btn btn-warning">Details</a>

					<a asp-action="SoftDelete"
					   asp-controller="Employees"
					   asp-route-id="@item.EmployeeId"
					   class="btn btn-warning">Soft Delete</a>
				</td>
			</tr>
		}

	</table>
}
else
{
	<h1 class="alert alert-warning">No data found</h1>
}

